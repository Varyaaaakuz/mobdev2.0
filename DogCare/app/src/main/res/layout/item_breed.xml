<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Название породы -->
    <TextView
        android:id="@+id/breedName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Золотистый ретривер"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <!-- Описание породы -->
    <TextView
        android:id="@+id/breedDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дружелюбная и умная порода, отличный компаньон для семьи"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:textColor="#666666" />

    <!-- Размер и активность в одной строке с разделителем -->
    <TextView
        android:id="@+id/breedSizeActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Крупная | Высокая активность"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:textColor="#666666" />

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="#E0E0E0" />

</LinearLayout>